<EditForm Model="ToDo" OnValidSubmit="OnValidSubmit">

    <DataAnnotationsValidator />

    <div class="form-group mt-4">
        <label class="form-label">Subject:</label>
        <InputText class="form-control" @bind-Value="@ToDo.Subject" />
        <ValidationMessage For="@(() => ToDo.Subject)" />
    </div>

    <div class="form-group">
        <label class="form-label">Description:</label>
        <InputTextArea class="form-control" rows="5" @bind-Value="@ToDo.Description" />
        <ValidationMessage For="@(() => ToDo.Description)" />
    </div>

    <div class="form-group">
        <label class="form-label">Status:</label>
        <InputSelect class="form-control" @bind-Value="@ToDo.IdStatus">
            @foreach (var item in StatusList)
            {
                <option value="@item.IdStatus">@item.StatusName</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => ToDo.IdStatus)" />
    </div>

    <button class="btn btn-primary" type="submit">Save Changes</button>

</EditForm>

@code {

    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public ToDo ToDo { get; set; }
    [Parameter] public List<Status> StatusList { get; set; }

}
